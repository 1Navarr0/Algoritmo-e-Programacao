Algoritmo "06 - Decisão"

var

    nota1, nota2, nota3, nota4 : real
    media : real
    situacao : caractere
    sexo : caractere

inicio
    escreval("Informe seu sexo(M/F): ")
    leia(sexo)
    escreval("Informe sua 1a nota: ")
    leia(nota1)
    escreval("Informe sua 2a nota: ")
    leia(nota2)
    escreval("Informe sua 3a nota: ")
    leia(nota3)
    escreval("Informe sua 4a nota ")
    leia(nota4)

    media <- (nota1 + nota2 + nota3 + nota4) / 4
    
    se media >= 6 entao
        situacao <- "Aprovada"
        se (sexo = "M") ou (sexo = "m") entao
            escreval("Caro aluno, sua situação é: ", situacao)
        fimse
        se (sexo = "F") ou (sexo = "f") entao
            escreval("Cara aluna, sua situação é: ", situacao)
        fimse
    senao
        situacao <- "Reprovada"
        se (sexo = "M") ou (sexo = "m") entao
            escreval("Caro aluno, sua situação é: ", situacao)
        fimse
        se (sexo = "F") ou (sexo = "f") entao
            escreval("Cara aluna, sua situação é: ", situacao)
        fimse
    fimse

fimalgoritmo
    

fimalgoritmo
