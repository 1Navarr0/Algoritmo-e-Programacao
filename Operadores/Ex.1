algoritmo "01 - Operadores"

var
    num1, num2 : inteiro
    resultado : real

inicio
    escreval("Informe o primeiro número: ")
    leia(num1)
    escreval("Informe o segundo número: ")
    leia(num2)
    
    resultado <- numero 1 + numero 2
    escreval("A soma entre: ", num1, " e", num2, " é: ")    
    escreval(resultado)

    resultado <- numero 1 - numero 2
    escreval("A subtração entre: ", num1, " e", num2, " é: ")    
    escreval(resultado)

    resultado <- numero 1 + numero 2
    escreval("A multiplicação entre: ", num1, " e", num2, " é: ")    
    escreval(resultado)

    resultado <- numero 1 + numero 2
    escreval("A divisão entre: ", num1, " e", num2, " é: ")    
    escreval(resultado)

fimalgoritmo
