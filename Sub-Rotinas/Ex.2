algoritmo "02 - Sub-Rotinas"

funcao maior(numero1, numero2, numero3 : inteiro): inteiro
inicio
    se numero1 > numero2 entao
        se numero1 > numero3 entao
            retorne numero1
        senao
            retorne numero3
        fimse
    senao
        se numero2 > numero3
            retorne numero2
        senao
            retorne numero3
        fimse
    fimse
fimfuncao

funcao menor(numero1, numero2, numero3 : inteiro): inteiro
inicio
    se numero1 < numero2 entao
        se numero1 < numero3 entao
            retorne numero1
        senao
            retorne numero3
        fimse
    senao
        se numero2 < numero3
            retorne numero2
        senao
            retorne numero3
        fimse
    fimse
fimfuncao

